# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# SRA (Solicitors Regulation Authority) API
SRA_API_KEY=your_sra_api_key_here

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Review Platform APIs
TRUSTPILOT_API_KEY=your_trustpilot_api_key_here
YELP_API_KEY=your_yelp_api_key_here

# Optional: OpenAI API for text processing and sentiment analysis
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_STRUCTURED=false

# Database Configuration (for future Supabase integration)
DATABASE_URL=your_supabase_database_url_here
DATABASE_KEY=your_supabase_anon_key_here

# Processing Settings
MAX_CONCURRENT_REQUESTS=5
ENABLE_RATE_LIMITING=true
DEBUG_MODE=false

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL_HOURS=24

# Proxy Settings (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# User Agent for Web Scraping
USER_AGENT=UK-Solicitors-Data-Collector/1.0

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=